<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fire">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".marker2profile"></activity>
        <activity android:name=".views.add_profile" />
        <activity android:name=".drawer.chatActivity" />
        <activity android:name=".drawer.mainDashboard" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".profile" />
        <activity android:name=".dashboard" />
        <activity android:name=".MainActivity" />
        <activity android:name=".newmapactivity" />
        <activity
            android:name=".mapactivity"
            android:label="@string/title_activity_mapactivity" />
        <activity android:name=".show" />
        <activity android:name=".login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".register" />

        <service
            android:name=".background_locationScheduler"
            android:permission="android.permission.BIND_JOB_SERVICE" />
    </application>

</manifest>